            <td>@Html.ValidationMessageFor(n => n.name)</td>
        </tr>
        <tr>
            <td style="color: #EB233C">@Html.LabelFor(n => n.age) </td>
            <td style="color: black;padding-bottom: 12px; margin-bottom: 12px;padding-left:8px"> @Html.TextBoxFor(n => n.age, null, new { placeholder = "Your Age" }) </td>
            <td>@Html.ValidationMessageFor(n => n.age)</td>
        </tr>
        <tr>
            <td style="color: #EB233C">@Html.LabelFor(n => n.email) </td>
            <td style="color: black; padding-bottom: 12px; margin-bottom: 12px;padding-left:8px">@Html.TextBoxFor(n => n.email, null, new { placeholder = "Your Email" })</td>
            <td>@Html.ValidationMessageFor(n => n.email)</td>
        </tr>
        <tr>
            <td style="color: #EB233C;">@Html.LabelFor(n => n.password) </td>
            <td style=" color: black;padding-bottom: 12px; margin-bottom: 12px;padding-left:8px">@Html.PasswordFor(n => n.password, new { placeholder = "Your Password" })</td>
            <td>@Html.ValidationMessageFor(n => n.password)</td>
        </tr>
        <tr>
            <td style="color: #EB233C;">@Html.LabelFor(n => n.confpassword) </td>
            <td style=" color: black;padding-bottom: 12px; margin-bottom: 12px;padding-left:8px">@Html.PasswordFor(n => n.confpassword, new { placeholder = "Confirm Password" })</td>
            <td>@Html.ValidationMessageFor(n => n.confpassword)</td>
        </tr>

        <tr>
