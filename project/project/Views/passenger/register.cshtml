@model project.Models.passenger 
@{
    ViewBag.Title = "register";
    Layout= "~/Views/Shared/_Layout.cshtml";
}
<style>
::-webkit-input-placeholder{
    font-weight:normal;
    color:gray;
}
</style>

<form method="post" >
    <table style="        text-align: center;
        font-weight: bold;
        margin: auto;
">
        <tr style=" text-align:center;">
            <td style="color: #EB233C">@Html.LabelFor(n => n.name) </td>
