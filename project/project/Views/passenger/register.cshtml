            <td>@Html.ValidationMessageFor(n => n.phone)</td>
        </tr>
        <tr>
            <td style="color: #EB233C">@Html.LabelFor(n => n.BD) </td>
            <td style="color: black;padding-bottom: 12px;margin-bottom: 12px;padding-left:8px">@Html.TextBoxFor(n => n.BD, null, new { placeholder = "Your Birth Day" })</td>
            <td>@Html.ValidationMessageFor(n => n.BD)</td>
        </tr>
        <tr>
            <td style="color: #EB233C">@Html.LabelFor(n => n.gender) </td>
            <td><input type="radio" value="male" name="gender" />male <input type="radio" value="female" name="gender" style=" padding-bottom: 15px; margin-bottom: 15px" />female</td>
            <td></td>
        </tr>
        <tr>
            <td></td>
            <td style="color: #EB233C;padding-bottom: 15px;margin-bottom: 15px"><input type="submit" value="register" /></td>
