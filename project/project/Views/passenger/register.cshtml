            <td style=" color: black;padding-bottom: 12px;margin-bottom: 12px;padding-left:8px">@Html.TextBoxFor(n => n.country, null, new { placeholder = "Your Country" })</td>
            <td>@Html.ValidationMessageFor(n => n.country)</td>
        </tr>
        <tr>
            <td style="color: #EB233C">@Html.LabelFor(n => n.phone) </td>
